@model TableStorage

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>

<form method="post">
    <div class="border pb-3 mt-4">
        <div class="row ">
            <div>
                <h2 class="text-primary">Create Table</h2>
                <hr />
            </div>
        </div>

        <div class="mb-3">
            <label asp-for="tableName"></label>
            <input  asp-for="tableName" class="form-control" />
            <span asp-validation-for="tableName" class="text-danger"></span>
        </div>

       
        <button type="submit" asp-controller="Table" asp-action="CreateT" asp-route-id="@Model.tableName" class="btn btn-primary" style="width:150px">Create</button>
        @*<a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">
        Back To List
        </a>*@
        

    </div>
</form>

